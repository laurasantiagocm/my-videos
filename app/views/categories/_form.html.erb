<%= form_for @category do |f| %>
  <div class="form-group">
      <label class="small mb-1">Name</label>
      <%= f.text_field :name, class: "form-control py-4", placeholder: "Name", required: true %>
  </div>
  <div class="form-check">
      <%= f.check_box :favorite, class: "form-check-input" %>
      <label class="small mb-1 form-check-label">Favorite</label>
  </div>
  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
      <%= link_to 'Back', categories_path, class: "btn btn-secondary" %>
      <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
