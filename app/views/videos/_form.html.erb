<%= form_for @video do |f| %>
  <div class="form-group">
    <label class="small mb-1">Title</label>
    <%= f.text_field :title, class: "form-control py-4", placeholder: "Title", required: true %>
  </div>
  <div class="form-group">
    <label class="small mb-1">Video URL</label>
    <%= f.text_field :youtube_link, class: "form-control py-4", placeholder: "Video URL", required: true %>
  </div>
  <%= f.select("category_id", @categories.collect {|c| [ c.name, c.id ] }) %>
  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
      <%= link_to 'Back', videos_path, class: "btn btn-secondary" %>
      <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
